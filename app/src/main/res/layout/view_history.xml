<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="@dimen/padding"
app:cardBackgroundColor="@color/card_background"
app:cardCornerRadius="4dp"
app:cardElevation="2dp"
app:cardPreventCornerOverlap="true"
app:cardUseCompatPadding="true">



    <RelativeLayout
        android:id="@+id/layout_report_monitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_clickable"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewList"
            android:src="@drawable/maps_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_view_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/space_grey"
            android:textSize="@dimen/text_view_subtitle"
            android:text="place added date"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageViewList" />

        <TextView
            android:id="@+id/text_view_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/space_black"
            android:textSize="@dimen/text_view_title"
            android:textStyle="bold"
            android:text="place name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewList"
            android:paddingTop="5dp" />


    </RelativeLayout>



</android.support.v7.widget.CardView>